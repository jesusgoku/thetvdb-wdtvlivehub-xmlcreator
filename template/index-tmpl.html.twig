<script id="tmpl-search" type="text/x-handlebars-template">
	{% verbatim %}
	<ul class="nav nav-list">
	{{#each Series}}
		<li>
			<h3><a href="proce.php?accion=serie&q={{ seriesid }}&language={{ language }}" data-seriesid="{{ seriesid }}" data-language="{{ language }}" class="serie">{{ SeriesName }} <span class="label label-info">{{ language }}</span></a></h3>
			<p>ID Serie: <a href="http://thetvdb.com/?tab=series&id={{ seriesid }}" target="_blank" title="ver en TheTVDB">{{ seriesid }}</a> - IMDB ID: <a href="http://imdb.com/title/{{ IMDB_ID }}" target="_blank" title="ver en IMDB">{{ IMDB_ID }}</a></p>
			<div class="alert">{{ Overview }}</div>
			<img src="http://www.thetvdb.com/banners/{{ banner }}">
		</li>
	{{/each}}
	</ul>
	{% endverbatim %}
</script>
<script id="tmpl-serie" type="text/x-handlebars-template">
	{% verbatim %}
	<h2>{{ Series.SeriesName }}</h2>
	<p>ID Serie: <a href="http://thetvdb.com/?tab=series&id={{ Series.id }}" target="_blank" title="ver en TheTVDB">{{ Series.id }}</a> - IMDB ID: <a href="http://imdb.com/title/{{ Series.IMDB_ID }}" target="_blank" title="ver en IMDB">{{ Series.IMDB_ID }}</a></p>
	<hr>
	<img src="http://www.thetvdb.com/banners/{{ Series.banner }}">
	<div class="alert">{{ Series.Overview }}</div>

	<h3>Seasons</h3>
	<ul class="nav nav-list">
	{{#each seasons }}
		<li><a href="proce.php?accion=episodemakexml&amp;seriesid={{ ../Series.id }}&amp;language={{ ../Series.Language }}&amp;season={{ this }}" data-seriesid="{{ ../Series.id }}" data-language="{{ ../Series.Language }}" data-season="{{ this }}" class="seasonmakexml">Seasons {{ this }}</a></li>
	{{/each}}
	</ul>

	<h3>Episodios</h3>
	<table id="list-episodes" class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>Clave</th>
				<th>Name</th>
				<th>Opciones</th>
			</tr>
		</thead>
		<tbody>
		{{#each Episode }}
			<tr>
					<td>S{{addzero SeasonNumber }}E{{addzero EpisodeNumber }}</td>
					<td>{{ EpisodeName }}</td>
					<td>
						<a href="proce.php?accion=episodemakexml&amp;seriesid={{ seriesid }}&amp;language={{ Language }}&amp;id={{ id }}" data-seriesid="{{ seriesid }}" data-language="{{ Language }}" data-id="{{ id }}" class="episodemakexml"><i class="icon-download-alt"></i></a>
						<a href="proce.php?accion=episodemakexml&amp;seriesid={{ seriesid }}&amp;language={{ Language }}&amp;id={{ id }}&only=xml" data-seriesid="{{ seriesid }}" data-language="{{ Language }}" data-id="{{ id }}"><i class="icon-file"></i></a>
						<a href="proce.php?accion=episodemakexml&amp;seriesid={{ seriesid }}&amp;language={{ Language }}&amp;id={{ id }}&only=metathumb" data-seriesid="{{ seriesid }}" data-language="{{ Language }}" data-id="{{ id }}"><i class="icon-picture"></i></a>
						<!-- <a href="proce.php?accion=episodemakexml&amp;seriesid={{ seriesid }}&amp;language={{ Language }}&amp;id={{ id }}" data-seriesid="{{ seriesid }}" data-language="{{ Language }}" data-id="{{ id }}"><i class="icon-download-alt"></i></a> -->
					</td>
				</tr>	
		{{/each}}
		</tbody>
	</table>
	{% endverbatim %}
</script>